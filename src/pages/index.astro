---
import Layout from "../layouts/Layout.astro";
import SafeArea from "$src/components/astro/safe-area-wrap.astro";
import Page from "$src/components/astro/uno/page.astro";
import Navbar from "$src/components/astro/uno/navbar.astro";
import BackLink from "$src/components/svelte/backLink.svelte";
